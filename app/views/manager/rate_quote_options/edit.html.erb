<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
	<h4 class="modal-title">Edit City</h4>
</div>
<%= form_for(@rate_quote_option, url: manager_rate_quote_option_path, remote: true, method: :patch, html: {id: 'edit_form', class: 'create_record_form'})  do |f| %>
	<%= f.hidden_field :id %>
	<div class="modal-body">
		<div class="row">
			<label class="col-sm-2">Option Type</label>
			<%= f.select :option_type, options_for_select(APP_CONFIG['quote_option_id'].map{|role| [ role[1], role[0] ]}, @rate_quote_option.option_type),{:include_blank => "Select Type"}, {:class => "form-control page-addform_feild col-sm-6 js_option_type"} %>
		</div>
		<div class="row">
			<label class="col-sm-2">Title</label>
			<%= f.text_field :title, :class => 'form-control page-addform_feild col-sm-6', :placeholder => 'Enter Title' %>
		</div>
		<div class="row js_option_div" style="display:none;">
			<label class="col-sm-2" style="display:none1;">Options</label>
			<%= f.text_area :options, :class => 'form-control page-addform_feild col-sm-6', :placeholder => 'Enter Options' %>
		</div>
    </div>
	<div class="modal-footer">
	  <button data-dismiss="modal" class="btn btn-default" type="button">Close</button>
	  <button class="btn btn-primary" type="submit">Save changes</button>
	</div>
<% end %>
<script type="text/javascript">
	$(".js_option_type").trigger("change");
</script>