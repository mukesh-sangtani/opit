<% content_for :header do %>
	<h1 class="col-xs-12 col-sm-4 text-center text-left-sm">
        <i class="fa fa-unlock page-header-icon"></i>&nbsp;&nbsp;Change Password
    </h1>
    <%= link_to "GO BACK", manager_admins_path, :class => 'add-new_btn btn btn-page-back col-sm-1' %>
<% end %>

<%= form_for(@admin, url: url_for(:controller => "manager/admins",:action => "update_password"), remote: true, method: :post, html: {id: 'edit_form', class: 'create_record_form'})  do |f| %>
    <%= f.hidden_field :id %>
  <div class="box">
    <div class="box-body bg-white-15">     
        <div class="row">
            <label class="col-sm-2">New Password</label>
            <%= f.password_field :password, :class => 'form-control page-addform_feild col-sm-6', :placeholder => 'Enter Password' %>
        </div>
      <div class="row">
        <label class="col-sm-2">Confirm Password</label>
        <%= f.password_field :password_confirmation, :class => 'form-control page-addform_feild col-sm-6', :placeholder => 'Confirm Password' %>
      </div>
      <div class="row">
        <label class="padding-left_12 col-sm-2"></label>
        <div class="col-sm-10">
          <button class="btn btn-primary" type="submit">Save Changes</button>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          <%= link_to "Close", manager_admins_path, :class => 'btn btn-default' %>
        </div>
      </div>
    </div>
  </div>
<% end %>